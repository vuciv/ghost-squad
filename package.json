{
  "name": "ghost-squad",
  "version": "1.0.0",
  "description": "Multiplayer Pacman where players control ghosts hunting AI Pacman",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc && cp -r client dist/client && cp -r shared dist/shared",
    "start": "npm run build && node dist/server/index.js",
    "dev": "ts-node server/index.ts",
    "server": "npm run dev"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
